{
    "name": "nexendrie/site-generator",
    "description": "Static site generator which turns Markdown into HTML",
    "keywords": [
        "static", "site", "website", "generator", "markdown", "html"
    ],
    "license": "BSD-3-Clause",
    "homepage": "https://nexendrie.gitlab.io",
    "authors": [
        {
            "name": "Jakub Konečný",
            "email": "jakub.konecny2@centrum.cz",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://gitlab.com/nexendrie/site-generator/",
        "issues": "https://gitlab.com/nexendrie/site-generator/issues",
        "docs": "https://nexendrie.gitlab.io/site-generator"
    },
    "require": {
        "php": ">=8.1.0",
        "ext-dom": "*",
        "xenocrat/chyrp-markdown": "^4.0",
        "nette/finder": "^2.6",
        "nette/neon": "^3.4.1",
        "nette/utils": "^3.2.10",
        "nette/command-line": "^1.7",
        "symfony/options-resolver": "^6.0 || ^7.0"
    },
    "require-dev": {
        "nexendrie/code-quality": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Nexendrie\\SiteGenerator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nexendrie\\SiteGenerator\\": "tests/Nexendrie/SiteGenerator/"
        }
    },
    "bin": [
        "bin/generate-site"
    ],
    "config": {
        "classmap-authoritative": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
